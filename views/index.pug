extends layout

block content
    div.helpbox
        h2 Parish Priest
        p #[b Priest Full Name]
        p #[i Presbytery] &nbsp; 0123456789 | #[i Mobile] &nbsp; 0123456789
            br
            | #[i Email] &nbsp; himself@email.com

        h2 Address
        p 1 Road Name
            br
            | Town
            br
            | Post town
            br
            | POST CODE

    h1 Service Times

    table.homepage
        tr
            th Service
            th Weekday
            th Time
            th Location
        for service in serviceTimes
            tr
                td=service.service_type
                td=service.weekdayString
                td=service.time
                td=service.location_name
