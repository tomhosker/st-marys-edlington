doctype html
html
    head
        title #{title}
        link(rel="stylesheet", href="/stylesheets/style.css")
    body
        bbox
            div.header
            div.tabs
                table.tabs
                    tr
                        td.tabs #[a(href="/") #[button.tabs Home]]
                        td.tabs #[a(href="/youth") #[button.tabs Youth]]
                        td.tabs #[a(href=mostRecentNewsletterURL) #[button.tabs Newsletter]]
                        td.tabs
                            div.dropdown
                                button.tabs More
                                div.dropdown-content
                                    a(href="/community") Community
                                    a(href="/gallery") Gallery
                                    a(href="/pilgrimages") Pilgrimages
                                    a(href="/charity") Charitable Works
                                    a(href="/formation") Formation and Foundation
                                    a(href="/donate") Donate
                                    a(href="/outreach") Outreach
                                    a(href="/newsletters") Older Newsletters
            block content
        footer
            br
            p #[a(href="/") Home] | !{logInOrOut}
